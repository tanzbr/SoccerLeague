@{
    Layout = null;  // Indica que esse é o layout principal, não usa outro layout
    var title = ViewBag.Title ?? "Liga Tabajara de Futebol";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <!-- Supondo uso de Bootstrap ou CSS próprio -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("ScriptsHead", required: false)
</head>
<body>
    <header>
        <h1>Liga Tabajara de Futebol</h1>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Times", "Index", "Times")</li>
                <li>@Html.ActionLink("Jogadores", "Index", "Jogadores")</li>
                <li>@Html.ActionLink("Comissão", "Index", "ComissaoTecnica")</li>
                <li>@Html.ActionLink("Partidas", "Index", "Partidas")</li>
                <li>@Html.ActionLink("Tabela", "Index", "Tabelas")</li>
            </ul>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Liga Tabajara</p>
    </footer>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>

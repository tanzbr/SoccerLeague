@{
    Layout = null;  
    var title = ViewBag.Title ?? "Liga Tabajara de Futebol";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    @RenderSection("ScriptsHead", required: false)
</head>
<body>
    <header class="header">
        <div class="banner">
            <h1>Liga Tabajara de Futebol</h1>
        </div>
        <nav class="navbar">
            <ul class="nav-menu">
                <li>@Html.ActionLink("Início", "Index", "Home")</li>
                <li>@Html.ActionLink("Artilharia", "Index", "Artilharia")</li>
                <li>@Html.ActionLink("Times", "Index", "Times")</li>
                <li>@Html.ActionLink("Jogadores", "Index", "Jogadores")</li>
                <li>@Html.ActionLink("Comissão", "Index", "ComissaoTecnica")</li>
                <li>@Html.ActionLink("Partidas", "Index", "Partidas")</li>
            </ul>
        </nav>
    </header>

    <main class="main-container">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Liga Tabajara de Futebol</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>

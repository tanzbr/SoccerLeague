@model IEnumerable<SoccerLeague.ViewModels.ArtilhariaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Artilharia do Campeonato";
}

<h2>Artilharia do Campeonato</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Pos</th>
            <th>Jogador</th>
            <th>Time</th>
            <th>Gols</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    Nenhum gol registrado ainda.
                </td>
            </tr>
        }
        else
        {
            foreach (var a in Model)
            {
                <tr>
                    <td>@a.Posicao</td>
                    <td>
                        @Html.ActionLink(
                            a.NomeJogador,
                            "Details",
                            "Jogadores",
                            new { id = a.JogadorId },
                            null
                        )
                    </td>
                    <td>@a.NomeTime</td>
                    <td>@a.TotalGols</td>
                </tr>
            }
        }
    </tbody>
</table>
